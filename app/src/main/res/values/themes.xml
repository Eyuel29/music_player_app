<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/default_classic_100</item>
        <item name="colorPrimaryVariant">@color/default_classic_200</item>
        <item name="colorOnPrimary">@color/default_Light_200</item>

        <item name="colorSecondary">@color/default_classic_200</item>
        <item name="colorSecondaryVariant">@color/default_classic_400</item>
        <item name="colorOnSecondary">@color/default_Light_200</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SongCardBody">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SongCardTitle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CustomCard">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="songCoverImage">
        <item name="android:radius">5dp</item>
    </style>

</resources>