<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="false"
    android:background="?attr/colorPrimary"
    android:gravity="center_horizontal"
    tools:context=".activities.FSMusicPlayerActivity">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/collapseMusicPlayer"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_down"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/songCoverLarge"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/default_classic_200"
            android:src="@drawable/music_player" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musicPlayerSongName"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/likeSong"
                    android:text="Song name"
                    android:singleLine="true"
                    android:textColor="@color/default_Light_500"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/musicPlayerSongArtist"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/likeSong"
                    android:text="Artist"
                    android:textColor="@color/default_Light_400"
                    android:textSize="18dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/likeSong"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginHorizontal="35dp"
                        android:src="@drawable/heart_unchecked"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekbarMusicPlayer"
                android:thumbTint="@color/white"
                android:layout_marginHorizontal="20dp"
                android:progressBackgroundTint="@color/default_dark_500"
                android:progressTint="@color/default_Light_400" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/timeCurrent"
                    android:layout_marginStart="35dp"
                    android:text="00:00"
                    android:textColor="@color/default_Light_500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/timeTotal"
                    android:layout_marginEnd="35dp"
                    android:text="03:45"
                    android:textColor="@color/default_Light_500" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/shuffle_unchecked"
                />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/skip_prev"
                />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/play"
                />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/skip_next"
                />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/repeat_unchecked"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>